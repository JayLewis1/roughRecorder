<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
  <script src="/js/library.js" type="text/javascript" ></script>


  <title>Library</title>
</head>

<body>
  <div class="header">
    <img class="logo" src="../assets/logo.png"> </img>
    <div class="navbarIn">
      <nav class="library-nav"></nav>
      <ul>
        <li><a href="/">home</a></li>
        <li><a href="/library" class="library-active">library</a></li>
        <li><a href="/about">about</a></li>
        <li><a href="/account">account</a></li>
      </ul>
      </nav>
    </div>


    <div id="library-con">
      <div class="column songs">
        <h1 class="library-titles">Songs</h1>




        <div id="scrolltable">
          <table id="sTable">
            <% for(var i=0; i<projects.length; i++) {%>

            <tr class="row">
              <td class="row-pad">
                <button class="proBtn" data-lyrics="<%= projects[i].lyrics %>" data-tab="<%= projects[i].tabs %>">

                  <!-- <%=  console.log(JSON.stringify(projects[i].tracks)); %> -->
                  <%=  projects[i].title%>

                </button>
              </td>
            </tr>

            <tr class="library-row">
              <td class="row-2nd">
                <!-- <%= projects[i].tracks[0] %> -->
                <button class="trackBtn" data-tracks="<%= JSON.stringify(projects[i].tracks) %>"
                  data-title="<%=  projects[i].title%>" >
                <h1 class="selectTrack">Select a Track</h1>
                </button>
                
                </td>
            </tr>

            <div id="songModal" class="modal">

              <div id="track-content">
                <h1 id="modal-title"></h1>
                <div id="container">

                </div>
                <div class="btnBg">
                  <button id="modalClose">Close</button>
                </div>
              </div>
            </div>
            <% } %>
          </table>
        </div>




      </div>
      <div class="column" id="tabs">
        <h1 class="library-titles">Tabs</h1>
        <div id="tab-lines">
          <!-- <svg  id="library-svg">
            <line x1="5" y1="17" x2="420" y2="17" class="gLine" />
            <line x1="5" y1="47" x2="420" y2="47" class="gLine" />
            <line x1="5" y1="80" x2="420" y2="80" class="gLine" />
            <line x1="5" y1="112" x2="420" y2="112" class="gLine" />
            <line x1="5" y1="144" x2="420" y2="144" class="gLine" />
            <line x1="5" y1="176" x2="420" y2="176" class="gLine" />
            Your browser does not support inline SVG.
          </svg> -->
          
        </div>
      </div>
      <div class="column lyrics">
        <h1 class="library-titles">Lyrics</h1>
        <div id="lyric-background">
          <textarea id="lyricP" value="" readonly>
                  </textarea>
        </div>
      </div>
    </div>


    <script src="https://unpkg.com/wavesurfer.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
    <script type="text/javascript" src="/js/library.js"></script>

</body>

</html>